<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Rank Checker</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2rem; background: #f5f5f5; }
    input, button { padding: 0.5rem; font-size: 1rem; }
    #result { margin-top: 1rem; font-weight: bold; }
  </style>
</head>
<body>
  <h1>🏆 내 점수 랭크 보기</h1>
  <input type="number" id="valueInput" placeholder="점수를 입력하세요" />
  <button onclick="submitScore()">제출</button>
  <div id="result"></div>

  <script>
    const SCRIPT_URL = "https://docs.google.com/spreadsheets/d/1eIYd4GzU5tJ9p1sksTOvn2iLmDnn6570Bkg0SMaZGf8/edit?gid=0#gid=0";

    async function submitScore() {
      const value = document.getElementById("valueInput").value;
      if (!value) return alert("값을 입력하세요");

      const formData = new FormData();
      formData.append("value", value);

      try {
        const res = await fetch(SCRIPT_URL, {
          method: "POST",
          body: formData
        });

        const data = await res.json();
        document.getElementById("result").innerText = `당신의 랭크는 ${data.rank}등 입니다.`;
      } catch (err) {
        document.getElementById("result").innerText = "오류 발생: " + err;
      }
    }
  </script>
</body>
</html>
